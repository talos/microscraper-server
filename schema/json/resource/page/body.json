
{
    "id" : "body",
    "description" : "A MicroScraper scrapeable web page -- Abstract Body",
    "extends" : "../page",
    
    "properties" : {
	"method"    : {
	    "description" : "Method for body must be get or post.",
	    "type" : "string",
	    "enum" : ["get", "post"],
	    "required" : true
	},
	"terminate" : {
	    "type" : "array",
	    "description" : "Patterns that terminate the loading of this body.",
	    "items": { "$ref" : "../scraper/pattern" },
	    "required" : false
	},
	"posts" : {
	    "description" : "Optional hash of posts.",
	    "additionalProperties" : { "$ref" : "name_value_pairs" },
	    "required" : false
	}
    }
}
