
{
    "id" : "page",
    "description" : "A web page.",
    "extends" : { "$ref" : "../resource.json#" } ,
    
    "properties" : {
	"method": {
	    "description" : "The HTTP request type to use.  Either Post, Get, or Head.",
	    "type" : "string",
	    "enum" : ["post", "head", "get"],
	    "required" : false,
	    "default"  : "get"
	},
	"url" : {
	    "description" : "The requested URL, which is mustached.",
	    "type" : "string",
	    "format" : "uri",
	    "required" : true
	},
	"cookies" : {
	    "description" : "Name-value pairs of cookies.",
	    "additionalProperties" : {
		"$ref" : "name_value_pairs.json#"
	    },
	    "required" : false
	},
	"headers" : {
	    "description" : "Name-value pairs of generic headers.",
	    "additionalProperties" : {
		"$ref" : "name_value_pairs.json#"
	    },
	    "required" : false
	},
	"preload" : {
	    "type" : "array",
	    "description" : "Page requests to make beforehand. No data is extracted from these pages.",
	    "items" : { "$ref" : "#" },
	    "required" : false
	},
	"stop_because" : {
	    "type" : "array",
	    "description" : "Patterns that terminate the loading of this page's body.",
	    "items": { "$ref" : "pattern.json#" },
	    "required" : false
	},
	"posts" : {
	    "description" : "Optional hash of posts.",
	    "additionalProperties" : { "$ref" : "name_value_pairs.json#" },
	    "required" : false
	}
    }
}
