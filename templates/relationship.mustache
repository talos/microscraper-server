{{#html_format}}
  <div class="relationship">
    {{! The relationship's name. }}
    <div class="name">{{name}} (<a class="related_model" href="{{related_model_location}}">{{related_model}}</a>)</div>
    {{! List the links inside this relationship. }}
    <ul class="links">
      {{#links}}
        <li class="link">
          {{#can_edit}}
            <form method="delete" action="{{relationship_location}}">
              <a href="{{resource_location}}">{{name}}</a>
              <input type="submit" name="delete" value="X" />
            </form>
          {{/can_edit}}
          {{^can_edit}}
          <a href="{{resource_location}}">{{name}}</a>
          {{/can_edit}}
        </li>
      {{/links}}
      </li>
      {{! Allow the user to add another link to this relationship. }}
      {{#can_edit}}
        <form method="put" action="{{location}}">
          <input class="add_link" type="text" name="name"  title="{{related_model_location}}" />
          <input type="submit" name="add" value="Add" />
        </form>
      {{/can_edit}}
  </div>
{{/html_format}}