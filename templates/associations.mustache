{{#associations}}
  {{#html_format}}
    <div class="association">
      <span class="name ui-widget-header ui-corner-top">
        <a href="{{model_location}}">
          {{name}}
        </a>
      </span>
      <div class="ui-widget-content">
      {{! List the resources inside this collection. }}
      <ul class="collection">
        {{#collection}}
          <button class="resource ui-corner-all">
            {{#can_edit}}
              <form method="delete" action="{{location}}">
                <a href="{{location}}">{{full_name}}</a>
                <input class="ui-widget-content" type="submit" value="X">
              </form>
            {{/can_edit}}
            {{^can_edit}}
            <a href="{{location}}">{{full_name}}</a>
            {{/can_edit}}
            {{! If we're recursing, use a partial for the linked resource. }}
            {{#recurse}}
              {{> resource}}
            {{/recurse}}
          </button>
        {{/collection}}
      </ul>
      {{! Allow the user to add another resource to this collection. }}
      {{#can_edit}}
        <form method="put" action="{{location}}">
          <input class="add resource" type="text" name="title"  title="{{model_location}}" />
          <button type="submit">Add</button>
        </form>
      {{/can_edit}}
      </div>
    </div>
  {{/html_format}}
{{/associations}}