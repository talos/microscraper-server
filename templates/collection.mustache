{{#html_format}}
  <div class="collection">
    {{! The collection's name. }}
    <div class="name">{{name}} (<a class="related_model" href="{{model_location}}">{{model}}</a>)</div>
    {{! List the resources inside this collection. }}
    <ul class="resources">
      {{#resources}}
        <li class="resource">
          {{#can_edit}}
            <form method="delete" action="{{location}}">
              <a href="{{location}}">{{name}}</a>
              <input type="submit" name="delete" value="X" />
            </form>
          {{/can_edit}}
          {{^can_edit}}
          <a href="{{location}}">{{name}}</a>
          {{/can_edit}}
        </li>
      {{/resources}}
      </li>
      {{! Allow the user to add another resource to this collection. }}
      {{#can_edit}}
        <form method="put" action="{{location}}">
          <input class="add resource" type="text" name="title"  title="{{model_location}}" />
          <input type="submit" value="Add" />
        </form>
      {{/can_edit}}
  </div>
{{/html_format}}